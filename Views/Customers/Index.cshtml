@using Vidly_MVCProject.Models
@model List<Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
@{
    if (Model.Count != 0)
    {

        <table id="customers" class="table table-borderless">
            <tr class="danger">
                <th>Customers</th>
                <th>Discount Rate</th>
                <th>Delete</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr class="bg-warning">
                    <td>
                        <a href="/Customers/Edit/@item.Id">
                            @item.Name
                        </a>
                    </td>
                    <td>
                        @item.MembershipType.Name
                    </td>
                    <td>
                        <button data-customer-id="@item.Id" class="btn-link js-delete">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>We don't have any customers yet.</p>
    }
}
@section scripts{
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("sure to delete?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                alert("success");
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
}