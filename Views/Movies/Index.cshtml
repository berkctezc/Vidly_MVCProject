@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

<table class="table table-borderless">
    <tr class="danger">
        <th>Movie List</th>
        <th>Genre</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/Movies/details/@item.Id">
                    @item.Name
                </a>
            </td>
            <td>
                @item.Genre.Name
            </td>
        </tr>
    }
</table>